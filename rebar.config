%% -*- erlang -*-
{minimum_otp_vsn, "21.0"}.

{deps,
 [
  {sext, "1.8.0"},
  {rocksdb, {git, "https://gitlab.com/seanhinde/erlang-rocksdb.git", {ref,"d92ab154b10a7f8c86552c404d341ddd72c7228a"}}},
  {hut, "1.3.0"}
 ]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls
]}.

{profiles,
 [
  {test,
   [
    {deps, [ {proper, "1.4.0"}
           , {meck, "0.9.2"}]}
   ]},
  {docs,
   [
    {deps, [{edown, "0.8.4"}]},
    {edoc_opts,
     [{doclet, edown_doclet},
      {app_default, "http://www.erlang.org/doc/man"},
      {doc_path, []},
      {top_level_readme,
       {"./README.md", "https://github.com/aeternity/mnesia_rocksdb"}}]}]}
 ]}.
